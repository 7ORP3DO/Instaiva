extends layout

block content
  style.
      body {
      background-color: #121212;
      text-align: center;
      color: #eee;
      font-family: "Roboto", sans-serif;
      }
      h1 {
      font-size: 7em;
      margin-top: 30vh;
      background: linear-gradient(
      114deg,
      #e633da 35%,
      #2bfa97 60%,
      #3acdff 100%
      );
      -webkit-background-clip: text;
      -webkit-text-fill-color: transparent;
      font-family: "Comfortaa", cursive;
      }
      p {
      font-size: 2em;
      margin-top: -5vh;
      }
      a {
      color: deepskyblue;
      text-decoration: none;
      }
      @media screen and (min-width: 600px) {
      h1 {
      font-size: 10em;
      }
      p {
      font-size: 3.5;
      }
      a {
      font-size: 1.5em;
      margin-top:10vh;
      }
      }
